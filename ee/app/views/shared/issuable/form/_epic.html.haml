- project = local_assigns.fetch(:project)
- issuable = local_assigns.fetch(:issuable)

- return unless issuable.can_assign_epic?(current_user) && issuable.supports_epic?
- form = local_assigns.fetch(:form)

.form-group.row.issue-epic
  = form.label :label_ids, class: "col-12" do
    = _('Epic')
  .col-12
    .issuable-form-select-holder
      %input{ id: 'issue_epic_id', type: 'hidden', name: 'issue[epic_id]' }
      #js-epic-select-root{ data: { group_id: project.group.id, show_header: 'true' } }
